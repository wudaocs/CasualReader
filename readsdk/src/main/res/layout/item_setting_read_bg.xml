<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="ItemSettingBackground"
			type="com.ltd_tech.core.widgets.pager.PageStyle" />
	</data>

	<FrameLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<View
			android:id="@+id/bg_item_setting_read_bg_view"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:background="@{ItemSettingBackground.bgColor}"
			tools:background="@color/nb.read.bg_1"/>

		<ImageView
			android:id="@+id/iv_item_setting_read_bg_checked"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:padding="@dimen/dp_10"
			android:src="@drawable/ic_checked"
			android:scaleType="fitCenter"
			android:visibility="gone"
			tools:visibility="visible"/>
	</FrameLayout>
</layout>
